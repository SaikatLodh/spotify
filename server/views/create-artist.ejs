<!DOCTYPE html>
<html lang="en">
  <%- include('./layout/head.ejs') %>

  <body id="page-top">
    <div id="wrapper">
      <%- include('./layout/sidebar.ejs') %>

      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('./layout/navbar.ejs') %>
          <div class="artist-page">
            <div class="form-container">
              <div id="response"></div>
              <h1>Create New Artist</h1>
              <p class="subtitle">
                Please fill in the details to add a new artist to the database.
              </p>

              <form method="POST" id="artistForm">
                <div class="mb-3">
                  <label for="fullName" class="form-label">Full Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    placeholder="Enter Full Name"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Enter email address"
                    required
                  />
                </div>
                <div class="mb-4">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Set a password"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary">
                  Create Artist
                </button>
              </form>
            </div>
          </div>
        </div>

        <%- include('./layout/footer.ejs') %>
      </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </body>

  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <script src="js/sb-admin-2.min.js"></script>

  <script src="vendor/chart.js/Chart.min.js"></script>

  <script>
    $(document).ready(function () {
      $("#artistForm").submit(function (event) {
        event.preventDefault();
        $("#response").html("");
        $("#artistForm button").prop("disabled", true).text("Loading...");
        $.ajax({
          type: "POST",
          url: "/admin/createartist",
          data: $("#artistForm").serialize(),
          dataType: "json",
          success: function (response) {
            $("#artistForm button").prop("disabled", false).text("Create");
            $("#response").html(
              `<p style="color:green;">${response?.message}</p>`
            );
            ClearForm();
          },
          error: function (error) {
            $("#artistForm button").prop("disabled", false).text("Create");
            $("#response").html(
              `<p style="color:red;">${error?.responseJSON?.message}</p>`
            );
          },
        });
      });

      function ClearForm() {
        $("#fullName").val("");
        $("#email").val("");
        $("#password").val("");
      }
    });
  </script>
</html>
